<div>
  <h1>Реализация продукта</h1>

  <%= form_with url:add_order_path, model: @operations do |form| %>
    <div>
      <%= form.label "Продукт" %>: <%= form.select :product_id, Product.pluck(:name, :id) %><br>
      <%= form.label "Склад" %>: <%= form.select :stock_id, Stock.pluck(:name, :id) %><br>
      <%= form.label "Кол-во" %>: <%= form.text_field :quantity %><br>
      <%= form.hidden_field :operation_type, value: "leaving" %>
      <%= form.hidden_field :description, value: "Реализация продукта" %>

    </div>

    <div>
      <%= form.submit "Реализовать" %>
    </div>
  <% end %>
</div>
<hr>
<small><a href="/">home</a></small>